<InfoCard>
    orientation: 'vertical'
    radius: (10)
    padding: (10)
    md_bg_color: app.main_color
    spacing: (5)
    source: ''
    text: ''
    text_size: dp(14)
    text_color: app.font_color
    amount: ''
    amount_size: dp(24)
    amount_color: rgba("#183f52")
    halign: 'center'

    FitImage:
        size_hint: None, None
        size: '32dp', '32dp'
        source: root.source
    
    MDLabel:
        text: root.amount
        font_size: root.amount_size
        theme_text_color: "Custom"
        halign: root.halign
        pos_hint: {"center_x": .5, "center_y": .5}
        text_color: root.amount_color

    MDLabel:
        text: root.text
        font_size: root.text_size
        text_color: root.text_color
        pos_hint: {"center_x": .5}
        theme_text_color: "Custom"